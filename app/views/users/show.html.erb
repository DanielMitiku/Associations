<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      
      <% if current_user %>
		<!--<div class="col">-->
    <h3> <%= link_to "Create New Event", new_event_path,  class: "btn btn-sml btn-primary" %></h3>
    <!--</div>-->
    <% end %>
      
    </section>
  </aside>
  <div class="col-md-8">
  
    <% if @user.events.any? %>
      <h3>Events (<%= @user.events.count %>)</h3>
      <ol class="events">
      
      ====
          <div class="events-index-upcoming">
          <%= render 'upcoming_events' %>	
          </div>

	        <div class="events-index-past">
		      <%= render 'past_events' %>
	        </div>	

	
     
            ====
      </ol>
      <%= will_paginate @events %>
      <% else %>
      <p>Visit home page to see the available events or to create your own event</p>
    <% end %>
  </div>
</div>
